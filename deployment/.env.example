# CaseGuard V2 Production Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_PORT=5432

# Redis/Valkey Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6379

# Prefect Configuration
PREFECT_PORT=4200

# API Configuration
API_PORT=8000
SECRET_KEY=your_256_bit_secret_key_here
JWT_SECRET=your_jwt_secret_key_here

# External API Keys
OPENAI_API_KEY=sk-your_openai_api_key_here
PINECONE_API_KEY=your_pinecone_api_key_here
LLAMA_CLOUD_API_KEY=llx_your_llama_cloud_api_key_here

# Proclaim CRM Configuration (for FDM Solicitors)
PROCLAIM_USERNAME=your_proclaim_username
PROCLAIM_PASSWORD=your_proclaim_password

# Monitoring Configuration
GRAFANA_PORT=3000
GRAFANA_PASSWORD=your_grafana_admin_password
PROMETHEUS_PORT=9090

# Worker Configuration
WORKER_REPLICAS=2
MAX_WORKERS=4
WORKER_TIMEOUT=120

# Application Settings
CASEGUARD_ENV=production
LOG_LEVEL=INFO

# Optional: Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Security Headers
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Performance Tuning
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
REDIS_MAX_CONNECTIONS=50

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_S3_BUCKET=caseguard-backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Multi-tenant Configuration
DEFAULT_TENANT=fdm_solicitors
TENANT_ISOLATION_STRICT=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Job Queue Configuration
MAX_CONCURRENT_JOBS=25
JOB_TIMEOUT_SECONDS=3600
RETRY_ATTEMPTS=3

# Vector Database Configuration
VECTOR_DIMENSION=3072
CHUNK_SIZE=800
CHUNK_OVERLAP=100

# File Processing
MAX_FILE_SIZE_MB=50
SUPPORTED_FORMATS=pdf,doc,docx,txt,rtf,eml,msg,xls,xlsx

# AI Configuration
DEFAULT_AI_MODEL=gpt-4o-mini
AI_TEMPERATURE=0.1
AI_MAX_TOKENS=4000
AI_TIMEOUT_SECONDS=60

# Monitoring and Alerting
HEALTH_CHECK_INTERVAL=60
ERROR_THRESHOLD=0.05
LATENCY_THRESHOLD_SECONDS=30
ALERT_EMAIL=admin@yourcompany.com

# Data Retention
CASE_DATA_RETENTION_YEARS=10
VECTOR_DATA_RETENTION_YEARS=5
LOG_RETENTION_DAYS=90

# Compliance (GDPR)
GDPR_COMPLIANCE=true
DATA_ENCRYPTION=AES-256
AUDIT_LOGGING=true
PERSONAL_DATA_RETENTION_YEARS=6